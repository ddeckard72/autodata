
<div class="decoder-form">
    <h3>Decoder</h3>
    <%= form_for([@decoder]) do |f| %>
        <div class="data-field">
          <%= f.label "Year: " %>
          <%= f.text_area :year %>
          <%= f.label "Make: " %>
          <%= f.text_area :make %> 
        </div>

        <%= f.submit "Add" %>
    <% end %>
</div>